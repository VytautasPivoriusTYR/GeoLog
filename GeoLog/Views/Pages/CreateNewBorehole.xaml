<Page x:Class="GeoLog.Views.Pages.CreateNewBorehole"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GeoLog.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateNewBorehole">

    <Grid>
        <StackPanel>
            <DockPanel Margin="0,10,0,5">
                <ui:TextBlock VerticalAlignment="Center" Foreground="{DynamicResource ColorTyrOrange}" FontWeight="Bold" FontSize="10pt">Gr.</ui:TextBlock>
                <ui:TextBox x:Name="textBoxBoreholeName" PlaceholderText="Gręžinio numeris"></ui:TextBox>
            </DockPanel>

            <DockPanel HorizontalAlignment="Center">
                <ui:Button Margin="0,0,5,0" Appearance="Caution" x:Name="buttonCreateBorehole" Click="buttonCreateBorehole_Click">Sukurti</ui:Button>
                <ui:Button Appearance="Danger" x:Name="buttonBack" Click="buttonBack_Click" >Atšaukti</ui:Button>
            </DockPanel>
        </StackPanel>
    </Grid>
</Page>
