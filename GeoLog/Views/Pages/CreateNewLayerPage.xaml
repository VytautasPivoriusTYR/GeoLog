<Page x:Class="GeoLog.Views.Pages.CreateNewLayerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GeoLog.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateNewLayerPage">

    <Grid>
        <StackPanel Grid.Column="1" Grid.Row="1">
            <GroupBox Margin="0,5,0,0" Height="120" Style="{DynamicResource GroupBoxStyle}" HorizontalContentAlignment="Left" Header="Grunto aprašymas">
                <ui:RichTextBox x:Name="richTextLayerDescription"></ui:RichTextBox>
            </GroupBox>

            <GroupBox Margin="0,5,0,0" Style="{DynamicResource GroupBoxStyle}" Header="Sluoksnio storis (m)">
                <ui:NumberBox x:Name="numberBoxLayerThickness" MaxDecimalPlaces="2" SmallChange="0.1" LargeChange="1"></ui:NumberBox>
            </GroupBox>

            <GroupBox Margin="0,5,0,0" Style="{DynamicResource GroupBoxStyle}" Header="Sluoksnio pado gylis (m)">
                <ui:NumberBox></ui:NumberBox>
            </GroupBox>

            <DockPanel HorizontalAlignment="Center" Margin="0,5,0,0">
                <ui:Button x:Name="buttonCreateLayer" Appearance="Caution" Margin="0,0,5,0" Width="110" Click="buttonCreateLayer_Click">
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="New24" />
                    </ui:Button.Icon>
                    Sukurti
                </ui:Button>
            </DockPanel>


        </StackPanel>
    </Grid>
</Page>
